            overlay={
                    \draw[line width = 2pt, #1] (title.south east) -- (title.south west) {};
                }]
        \noindent
        \ifstrempty{#3}{\empty{}}{%
            \normalsize%
            \normalfont%
            \raggedright%
            \ignorespaces#3%
        }%
        \ifstrempty{#4}{\empty{}}{%
            \ifstrempty {#3} {\empty{}} {%
                \noindent
                \normalsize%
                \normalfont%
                \raggedright%
                \hbox to \linewidth{\leaders\hbox to 3pt{\hss . \hss}\hfill}\\%
            }%
            {%
                \normalsize%
                \TechnicalText%
                \itshape%
                \raggedright%
                \ignorespaces#4%
            }
        }
